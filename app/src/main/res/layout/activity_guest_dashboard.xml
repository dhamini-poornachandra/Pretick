<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.msrit.pretick.presentation.activity.GuestDashboardActivity">

    <Button
        android:id="@+id/view_ticket_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:text="View request status"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/raise_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view_ticket_status"
        android:layout_alignLeft="@+id/view_ticket_status"
        android:layout_alignRight="@+id/view_ticket_status"
        android:layout_alignStart="@+id/view_ticket_status"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:text="Raise Request"
        android:textColor="#ffff" />
</RelativeLayout>
