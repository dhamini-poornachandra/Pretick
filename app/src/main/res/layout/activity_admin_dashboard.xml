<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.msrit.pretick.presentation.activity.AdminPendingTicketListActivity">

    <Button
        android:id="@+id/view_pending_requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_approved_requests"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:background="@color/colorPrimary"
        android:padding="17dp"
        android:text="View Pending Requests"
        android:textColor="#fff" />

    <Button
        android:id="@+id/view_approved_requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="View Approved Requests"
        android:textColor="#fff" />

    <Button
        android:id="@+id/register_new_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view_pending_requests"
        android:layout_alignLeft="@+id/view_approved_requests"
        android:layout_alignRight="@+id/view_pending_requests"
        android:layout_alignStart="@+id/view_approved_requests"
        android:layout_below="@+id/view_approved_requests"
        android:layout_marginTop="77dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Register New Member"
        android:textColor="#fff" />

</RelativeLayout>
